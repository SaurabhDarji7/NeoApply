source 'https://rubygems.org'

ruby '3.2.2'

# Core
gem 'rails', '~> 8.0.0'
gem 'pg', '~> 1.5'
gem 'puma', '>= 5.0'

# Authentication
gem 'devise', '~> 4.9'
gem 'devise-jwt', '~> 0.12.0'

# Background Jobs (Rails 8 built-in)
gem 'solid_queue', '~> 0.3.0'

# File Processing
gem 'pdf-reader', '~> 2.12'
gem 'docx', '~> 0.8.0'
gem 'active_storage_validations', '~> 1.1'
gem 'json-schema', '~> 4.1'
gem 'rubyzip', '~> 2.3'

# LLM Integration
gem 'ruby-openai', '~> 6.3'

# Web Scraping
gem 'nokogiri', '~> 1.16'
gem 'httparty', '~> 0.21'

# CORS
gem 'rack-cors', '~> 2.0'

# Pagination
gem 'kaminari', '~> 1.2'

# Error tracking
gem 'honeybadger', '~> 5.0'

# Email templates
gem 'inky-rb', require: 'inky'
gem 'premailer-rails'

# Reduces boot times through caching
gem 'bootsnap', require: false

# Windows timezone data
gem 'tzinfo-data', platforms: %i[windows jruby]

group :development, :test do
  # Environment variables
  gem 'dotenv-rails', '~> 2.8'

  # Debugging
  gem 'debug', platforms: %i[mri windows]

  # Testing
  gem 'rspec-rails', '~> 6.1'
  gem 'factory_bot_rails', '~> 6.4'
  gem 'faker', '~> 3.2'
end

group :test do
  gem 'shoulda-matchers', '~> 6.0'
  gem 'webmock', '~> 3.19'
  gem 'vcr', '~> 6.2'
